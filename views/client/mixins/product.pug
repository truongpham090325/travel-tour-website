mixin product-item(item)
  .product-item
    .inner-image
      a(href=`/tour/detail/${item.slug}`)
        img(
          alt=item.name 
          src=item.avatar
          )
    .inner-discount
      i.fa-solid.fa-bolt
      | Giảm -#{item.discount}%
    .inner-content
      h3.inner-title
        a(href=`/tour/detail/${item.slug}`) #{item.name}
      .inner-prices
        .inner-price-old
          | #{item.priceAdult.toLocaleString("vi-VN")}
          span.inner-unit đ
        .inner-price-new
          | #{item.priceNewAdult.toLocaleString("vi-VN")}
          span.inner-unit đ
      .inner-desc
        //- .inner-desc-item
        //-   | Mã Tour:
        //-   b 123456789
        .inner-desc-item
          | Ngày Khởi Hành:
          b #{item.departureDateFormat}
        .inner-desc-item
          | Thời Gian:
          b #{item.time}
      .inner-meta
        //- .inner-rating
        //-   .inner-stars
        //-     i.fa-solid.fa-star
        //-     i.fa-solid.fa-star
        //-     i.fa-solid.fa-star
        //-     i.fa-solid.fa-star
        //-     i.fa-solid.fa-star
        //-   .inner-number (5)
        .inner-stock
          .inner-label Số chỗ còn:
          .inner-number #{item.stockAdult}
