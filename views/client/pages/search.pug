extends ../layouts/default.pug
include ../mixins/product.pug

block main
  // Section 9
  .section-9
    .container
      .inner-wrap
        .inner-left
          // Box Filter
          .box-filter
            .inner-head
              .inner-title Bộ Lọc
              i.fa-solid.fa-filter
            .inner-body
              .inner-group
                .inner-label Điểm đi
                select(name="locationFrom")
                  option(value="") -- Chọn điểm đi --
                  each item in cityList
                    option(value=item.name) #{item.name}
              .inner-group
                .inner-label Điểm đến
                select(name="locationTo")
                  option(value="") -- Chọn điểm đến --
                  each item in cityList
                    option(value=item.name) #{item.name}
              .inner-group
                .inner-label Ngày khởi hành
                input(type="date" name="departureDate")
              .inner-group
                .inner-label Số Lượng Hành Khách
                .inner-input-list
                  .inner-input-item
                    .inner-label Người lớn:
                    input(
                      value="0" 
                      type="number"
                      name="stockAdult"
                      )
                  .inner-input-item
                    .inner-label Trẻ em:
                    input(
                      value="0" 
                      type="number"
                      name="stockChildren"
                      )
                  .inner-input-item
                    .inner-label Em bé:
                    input(
                      value="0" 
                      type="number"
                      name="stockBaby"
                      )
              .inner-group
                .inner-label Mức giá
                select(name="price")
                  option(value="") -- Chọn khoảng giá --
                  option(value="0-999999") Dưới 1tr
                  option(value="1000000-3000000") Từ 1tr đến 3tr
                  option(value="3000000-6000000") Từ 3tr đến 6tr
                  option(value="6000000-10000000") Từ 6tr đến 10tr
                  option(value="10000000-1000000000") Trên 10tr
              .inner-group
                button.inner-button Áp Dụng
          .inner-overlay
          // End Box Filter
        .inner-right
          .inner-info
            h2.inner-title #{pageTitle}
          .inner-info-2
            .inner-sort
              .inner-label Sắp xếp:
              .inner-list
                button(class="sort-price-asc")
                  | Giá tăng dần
                  i.fa-solid.fa-square-caret-up
                button(class="sort-price-desc")
                  | Giá giảm dần
                  i.fa-solid.fa-square-caret-down
                button.active
                  | Khuyến Mại Hot
                  i.fa-solid.fa-tag
                button
                  | Xem Nhiều
                  i.fa-solid.fa-eye
            .inner-count-record
              | Tất cả:
              b 101 Tour
            button.inner-filter-mobile
              span.inner-title Bộ Lọc
              i.fa-solid.fa-filter
          .inner-list-tour
            if(tourList.length > 0)
              each item in tourList
                // Product Item
                +product-item(item)
                // End Product Item
            else
              div Không tìm thấy kết quả.
          // Pagination
          .box-pagination
            button
              i.fa-solid.fa-angles-left
            - for(let i = 1; i <= pagination.totalPage; i++)
                button #{i}
            button
              i.fa-solid.fa-angles-right
          // End Pagination
  // End Section 9